<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prova.bugad.aurascalc2.About">

    <ImageView
        android:layout_marginTop="70dp"
        android:id="@+id/imgAboutIcon"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/lblabout1"
        android:layout_below="@+id/imgAboutIcon"
        android:text="Ver 2.0"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_below="@+id/lblabout1"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblabout2"
        android:text="Conceito por Hamon Giacomelli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_below="@+id/lblabout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblabout3"
        android:text="Ver 1.0 por Hamon Giacomelli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_below="@+id/lblabout3"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblabout4"
        android:text="Ver 2.0 por Lucas Bugada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
